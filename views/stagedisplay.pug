doctype html
html
  head
    title ProPresenter Stage Display
    script(src='/js/jquery-1.8.2.min.js')
    script(src='/js/socket.io-1.3.5.js')
    script(src='/js/textFit.min.js')
    script(src='/js/script.js')
    meta(name='apple-mobile-web-app-capable', content='yes')
    style.
      html {
        background-color: black;
        color: white;
        font-family: Helvetica;
        display: block;
      }
      body {
        width: 100%;
        height: 100%;
        overflow: hidden;
      }
  body
    each frame in frames
      div(id=frame.identifier, class='fit', style=frame.style)
        span #{frame.content}
