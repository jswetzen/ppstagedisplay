doctype html
html
  head
    title ProPresenter Stage Display
    script(src='http://code.jquery.com/jquery-1.8.2.min.js')
    script(src='https://cdn.socket.io/socket.io-1.3.5.js')
    script(src='/js/textFit.min.js')
    script(src='/js/script.js')
    style.
      html {
        background-color: black;
        color: white;
        font-family: Helvetica;
        display: block
      }
  body
    each frame in frames
      div(id=frame.identifier, class='fit', style=frame.style)
        span #{frame.content}
