doctype html
html
    head
        title ProPresenter Stage Display
        meta(http-equiv='refresh', content='5')
        meta(name='apple-mobile-web-app-capable', content='yes')
        style.
          html {
            background-color: black;
            color: white;
            font-family: Helvetica;
            display: block;
          }
          body {
            width: 100%;
            height: 100%;
            overflow: hidden;
          }
          .center {
            position: absolute;
            width: 50%;
            height: 25%;
            left: 50%;
            top: 50%;
            margin-left: -25%;
            margin-top: -2k%;
            text-align: center;
          }
    body
        .center
            each frame in frames
              div(id=frame.identifier, class='fit')
                span #{frame.content}